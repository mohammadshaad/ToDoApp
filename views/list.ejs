                                <%= todos[i] %>
                            </li>
                             
                        <% } %>
                    </ul> -->

                    <!-- <% for (var i=0; i < todos.length; i++) { %>
                        <label class="todo-container">
                            <%= todos[i] %>
                                <input type="checkbox" name="taskCheckbox" class="taskCheckbox">
                                <span class="checkmark"></span>
                        </label>

                        <% } %> -->

                    <!-- <form action="" class="todo-form">
                            <% for (var i=0; i < todos.length; i++) { %>
                                <label class="todo-container align-middle">
                                    <%= todos[i] %>
                                        <input type="checkbox" name="taskCheckbox" class="taskCheckbox">
                                        <span class="checkmark"></span>
                                </label>
        
                                <% } %>
                        </form> -->

                    <div class="todos-added w-full">
                        <% for (var i=0; i < todos.length; i++) { %>
                            <div
                                class="todos-added-child bg-amber-400 rounded-md p-8 text-xl mb-5 w-full h-12 flex flex items-center justify-between cursor-pointer hover:transform">
                                <div class="flex items-center justify-center gap-10">
                                    <label
                                        class="todo-container flex flex-row-reverse items-center justify-center gap-4">
                                        <input type="checkbox" value=<%= todos[i] %> name="check" class="taskCheckbox">
                                        <p>
                                            <%= todos[i] %>

                                        </p>
                                        <span class="checkmark flex items-center justify-center"></span>
                                    </label>
                                </div>
                                <form action="/removetask" method="post" name="button" value=<%= todos[i] %>>
                                    <button type="submit" class="todos-added-span hover:text-black">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                            <% } %>
                    </div>

                </div>



            </div>
        </div>
    </div>


