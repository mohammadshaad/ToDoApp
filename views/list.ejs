<body>
    <div class="container p-10 flex flex-col justify-center items-center">
        <h1 class="text-5xl text-center font-semibold">
            TO DO LIST APP
        </h1>

        <div class="wrapper p-10 w-full h-screen rounded-md mt-5">
            <form action="/" method="post" class="flex justify-center">
                <div class="inp-cont w-9/12 flex justify-center rounded-md bg-white">
                    <div class="inp-div w-full">
                        <input type="text" name="todo" id="todo" class="input font-bold h-12 w-full font-light p-5"
                            placeholder="Write To-Do Here" autofocus required>
                    </div>

                    <div class="flex mr-5 justify-center items-center">
                        <button type="submit"
                            class="add-icon bg-amber-400 rounded-full w-9 h-9 flex justify-center items-center"><i
                                class="fa-solid fa-plus text-xl text-rose"></i></button>
                    </div>

                </div>

            </form>

            <div class="added-todos mt-20 flex flex-col items-center">
                <h2 class="text-4xl tracking-wider italic your-tasks">YOUR TASKS</h2>

                <div class="todo-list mt-10 flex flex-col items-start w-full">



                    <!-- <ul class="text-white list-decimal">
                        <li>
                            <%= todos %>
                        </li>
                    </ul> -->

                    <!-- <ul class="text-white list-decimal">
                        <% for (var i = 0; i < todos.length; i++) { %>
